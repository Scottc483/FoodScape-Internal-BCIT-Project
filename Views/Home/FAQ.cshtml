@using Microsoft.AspNetCore.Identity
@using Food_Scape.ViewModels



@model Food_Scape.ViewModels.ContactVM


@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="./css/faqStyles/faq-index.css" />
</head>

<div class="container py-5">
    <h1 class="mb-5">FAQ/Help</h1>

    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    What is the food festival event?
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    The food festival event is an annual event where local restaurants, food trucks, and vendors gather to showcase their culinary creations. It's a great opportunity for foodies to explore new flavors and experience the diverse food culture of the city.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    When and where is the event taking place?
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    To find the event date please visit the event information page <a href="/events">Click Here</a>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    How much does it cost to attend the event?
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    For information on ticket prices for each event, please visit our ticket purchasing page to view the prices for each event. <a href="/tickets">Click Here</a>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingFour">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                    Can I bring my own food and drinks?
                </button>
            </h2>
            <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    Outside food and drinks are not allowed at the event. We encourage you to try the delicious dishes prepared by our vendors and support the local food community.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingFive">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                    Are there vegetarian and vegan options available?
                </button>
            </h2>
            <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    Yes, we have a wide range of vegetarian and vegan options available. Just look for the appropriate labels on the menus or ask the vendors for recommendations.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingSix">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                    Is the event accessible for people with disabilities?
                </button>
            </h2>
            <div id="collapseSix" class="accordion-collapse collapse" aria-labelledby="headingSix" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    Yes, the event is accessible for people with disabilities. We have wheelchair ramps and accessible restrooms available. If you require any assistance, please don't hesitate to ask our staff members for help.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingSeven">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSeven" aria-expanded="false" aria-controls="collapseSeven">
                    Can I bring my pet to the event?
                </button>
            </h2>
            <div id="collapseSeven" class="accordion-collapse collapse" aria-labelledby="headingSeven" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    We love pets, but unfortunately, we do not allow them at the event for safety and hygiene reasons. Please leave your furry friends at home and come enjoy the food festival with your human friends.
                </div>
            </div>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    @if (Model.Success == true)
                    {
                        <div class="alert alert-success">Your message has been sent!</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Error))
                    {
                        <div class="alert alert-danger">@Model.Error</div>
                    }
                    <h2 class="text-center mb-4">Contact Us</h2>
                </div>
                <div class="card-body">
                    <form class="contact-form" method="post" action="/Contact/Send" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="Name" value="" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="Email" value="" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="Message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

