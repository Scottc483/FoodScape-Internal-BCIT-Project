@model Food_Scape.Models.Vendor

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h-100 d-flex align-items-center">
    <div class="col-11 mx-auto">
        <h1 class="text-center">Delete Vendor</h1>
        <h3 class="text-center">Are you sure you want to delete this?</h3>

        <hr />
        <dl class="col-sm-3 row mx-auto">
            <dt class="col-sm-5">
                Vendor
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-5">
                Description
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-5">
                From
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-5">
                To
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
            <dt class="col-sm-5">
                Type
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.VendorType)
            </dd>
            <dt class="col-sm-5">
                Location
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Location)
            </dd>
        </dl>

        <form asp-action="Delete">
            <div class="col-sm-3 mx-auto d-flex flex-column justify-content-evenly align-items-center">
                <input type="hidden" asp-for="VendorId" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" />
                <a asp-action="AdminIndex">Back to Vendor List</a>
            </div>
        </form>
    </div>
</div>



