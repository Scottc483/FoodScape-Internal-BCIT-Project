@model IEnumerable<Food_Scape.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h-100 d-flex align-items-center">
    <div class="col-sm-3 mx-auto">
        @if (ViewBag.Message != "")
        {
            <h1 class="text-success text-center">@ViewBag.Message</h1>
        }
        @if (ViewBag.Error != "")
        {
            <h1 class="text-danger text-center">@ViewBag.Error</h1>
        }
        <h1 class="text-center">Roles</h1>
        <p>
            <a asp-action="Create" asp-controller="Role">Create New Role</a>
        </p>
        <table class="table table-bordered text-center table-striped shadow rounded">
            <thead>
                <tr>
                    <th>Role Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => role.RoleName)</td>
                        <td>
                            <a asp-action="Delete" asp-controller="Role" asp-route-id="@role.RoleName">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-action="Index" asp-controller="Admin">Back to Admin Panel</a>
        </div>
    </div>

</div>
