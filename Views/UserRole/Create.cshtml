@model Food_Scape.ViewModels.UserRoleVM




<div class="h-100 d-flex align-items-center">
    <div class="col-3 mx-auto">
        <h4>Assign User Role</h4>
        <form asp-action="Create" asp-controller="UserRole">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>
            <div class="form-group">
                <!-- This shows the label. -->
                <label asp-for="Email" class="control-label"></label>

                <!-- Drop down for List of strings with user selected. -->
                @Html.DropDownList(
                    "Email",
                    new SelectList(ViewBag.UserSelectList, 
                        "Value", 
                        "Text",
                        ViewBag.SelectedUser
                    ), 
                    "Select User",
                    new { @id = "userDD", @class = "form-control mb-3" }
                )

                <!-- This shows validation for
                     dropdown of 'Email' property. -->
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>

                <!-- Drop down for SelectList with
                    'Value' and 'Text' properties. -->
                @Html.DropDownList(
                    "RoleName",
                    new SelectList(
                        ViewBag.RoleSelectList, 
                        "Value", 
                        "Text"
                    ),
                    "Select Role",
                    new { @id = "roleDD", @class = "form-control mb-3" }
                )

                <!-- This shows validation for
                    dropdown of 'Role' property. -->
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Assign"
                       class="btn btn-primary" />
            </div>
        </form>
        <a href='javascript:history.go(-1)'>Return to User Roles</a>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
