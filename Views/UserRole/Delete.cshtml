@model Food_Scape.ViewModels.UserRoleVM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="h-100 d-flex align-items-center">
    <div class="col-11 mx-auto">
        <h1 class="text-center">Delete User Role</h1>
        <h1 class="text-center">Are you sure you want to delete this?</h1>
        <hr />
        <dl class="col-sm-3 row mx-auto text-left">
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.RoleName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <div class="col-sm-3 mx-auto d-flex flex-column justify-content-evenly align-items-center">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="RoleName" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" />
                <a asp-action="Index">Back to Ticket List</a>
            </div>
        </form>
    </div>
</div>




