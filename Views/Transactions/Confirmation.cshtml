@model Food_Scape.Models.Ipn

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" @*integrity="sha512-CdJyNcb7VSlFe00lKxo7VwvzZuB7PgBgLjH9m7ChGv4i25e4tN4NfWMpR/qw+xZ5/5so5S5X9Fq2GbMk+egDyQ=="*@ crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h1 class="card-title text-center"><i class="fas fa-check-circle"></i></h1>
                    <h2 class="card-title text-center mb-4 text-success"> You've Got Tickets!</h2>
                    <p class="card-text text-center mb-4">Your purchase of <strong>@Model.Amount @Model.Currency</strong> was successful.</p>
                    <p class="card-text text-center"><strong>Order#: @Model.PaymentId.Substring(6)</strong></p>
                    <p class="card-text text-center mb-4">Keep this ID for future reference.</p>
                    <p class="card-text text-center"><a href="/Events">View Event Details</a></p>
                    <h2 class="card-title text-center"> Got any questions ?</h2>
                    <p class="card-text text-center"><a href="/FAQ">Contact the organiser.</a></p>
                  
                    <div class="d-flex justify-content-center gap-2" >
                        <a href="/" class="btn" style="background-color: #f4b139ed">Return to Homepage</a>
                        <a href="/AccountInfo" class="btn btn-primary">View your tickets</a>
                        <a href="/Transactions/DownloadTicketPdf?paymentId=@Model.PaymentId" class="btn btn-secondary">Download PDF</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js"@* integrity="sha512-jlgI/aQC0r5p5q8W5Y5vv+BYULCcIrxonxvXNfqFWeU6LzU6oN/6oC8/ba26dMMyvy2eSwiaL/Ku+ZlPMnT/lA=="*@ crossorigin="anonymous" referrerpolicy="no-referrer"></script>