@model Food_Scape.Models.FsUser

@{
    ViewData["Title"] = "Delete";
}

<div class="h-100 d-flex align-items-center">
    <div class="col-11 mx-auto">
        <h1 class="text-center">Delete User</h1>
        <h3 class="text-center">Are you sure you want to delete this?</h3>

        <hr />
        
        <dl class="col-sm-3 row mx-auto text-left">
            <dt class="col-sm-6">
                User ID
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserId)
            </dd>
            <dt class="col-sm-6">
                First Name
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-6">
                Last Name
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-6">
                Email
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

    
        <form asp-action="Delete">
            <div class="col-sm-3 mx-auto d-flex flex-column justify-content-evenly align-items-center">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Email" />
                <input type="submit" value="Delete" class="btn btn-danger mb-3" />
                <a asp-action="Index" asp-controller="User">Back to User List</a>
            </div>
        </form>
    </div>
</div>


